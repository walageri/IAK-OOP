<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundabtrack"
    tools:context="com.blogspot.programer27android.iakh1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/putih"
            android:text="@string/Login"
            android:gravity="center"
            android:textSize="@dimen/textview"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/putih"
            android:text="@string/akun"
            android:gravity="center"
            android:textSize="@dimen/textview2"/>
        <EditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textview3"
            android:text="@string/user"
            android:drawableLeft="@mipmap/ic_user"
            android:drawablePadding="10dp"
            android:textColor="@color/putih"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textview3"
            android:text="@string/password"
            android:drawableLeft="@mipmap/ic_password"
            android:drawablePadding="10dp"
            android:textColor="@color/putih"
            android:layout_margin="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Login"
            android:id="@+id/login"
            android:textColor="@color/putih"
            android:background="@color/colorPrimaryDark"
            android:textSize="@dimen/textview2"
            android:layout_margin="25dp" />
        <ImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_next"/>
</LinearLayout>

</RelativeLayout>
